extends base.pug

block content
  //- Main Tours
  section.main.section
    .container
      .main_tours
      
        - 
          let tours = [
            { title: "Добро пожаловать в Беларусь", image: '1.jpg', class: 'big' }, 
            { title: "Chernobyl Theme Tour", image: '2.jpg', class: 'small' }, 
            { title: "Тур по столице Беларуси", image: '3.jpg', class: 'small' }
          ]

        each tour in tours  
          div(class=`main_tour ${tour.class} bg`, style=`background-image: url('img/${tour.image}')`)
            .main_tour__title= tour.title
            a.main_tour__btn(href="/tour") Исследовать

  //- Offers
  section.offers.section
    .container 
      h2.title Что мы предлагаем?
      .offers_cards
        -
          let cards = [
            { title: "Отели", icon: "bed", description: "Мы предлагаем большинство лучших отелей Беларуси с высоким рейтингом."},
            { title: "Трансфер", icon: "car", description: "Любой автомобиль всех марок в вашем распоряжении. А также трансфер от самого аэропорта."},
            { title: "Туры", icon: "map", description: "Мы создали более 20 интересных туров по любым городам и местам Беларуси."},
            { title: "Получение визы", icon: "passport", description: "Если вы затрудняетесь с получением визы, либо хотите полностью поручить нам её оформление для вас."}
          ]
        each offer in cards
          .offers_cards__item
            .cards_item__icon
              img(src=`img/${offer.icon}.svg`, alt=`${icon}`)
            h3= offer.title
            .cards_item__description= offer.description

  //- Popular Tours
  section.tours.section 
    .container 
      h2.title Популярные Туры
      .tours_list
        -
          let popular_tours = [
            { title: "Брест - город-герой", intro: "Здесь находится душа 1000-летнего Бреста.", image: "t1.jpg", price: 300 },
            { title: "Лучшие места Минска", intro: "Современный европейский город с уютными и красивыми достопримечательностями", image: "t2.jpg", price: 199 },
            { title: "Рождество в Гомеле", intro: "В этом прекрасном городе проходит один из лучших рождественских карнавалов", image: "t3.jpg", price: 1000 },
            { title: "All in One", intro: "Тур включает в себя все популярные места по всей Беларуси", image: "t4.jpg", price: 677 },
          ]

        each tour in popular_tours 
          .tours_list__item.bg(style=`background-image: url(img/${tour.image})`)
            h3= tour.title
            .tours_item__intro
              p= tour.intro
            a.tours_item__link(href="/tour") Заказать
            .tours_item__price= `${tour.price}$`

  //- Subscribe
  section.subscribe.section
    .container 
      .subscribe_form
        .subscribe_form__text Подпишись, чтобы получать последние новости о скидках и новых турах
        button.subscribe_form__btn Подписаться

  //- Team
  section.team.section.dark
    .container
      h2.title Наша команда
      .team_list
        -
          let leads = [
            { name: "Elena", photo: "gid1.jpg", socials: ['elena1', 'elena_fb', 'elena_insta'] },
            { name: "Ben", photo: "gid2.jpg", socials: ['ben1', 'ben_fb', 'ben_insta'] },
            { name: "Anastasia", photo: "gid3.jpg", socials: ['anastasia1', 'anastasia_fb', 'anastasia_insta'] },
            { name: "Ildar", photo: "gid4.jpg", socials: ['ildar1', 'ildar_fb', 'ildar_insta'] },
          ]
        each lead in leads
          .team_list__lead
            .list_lead__photo
              img(src=`img/${lead.photo}`)
            h3= lead.name
            ul.list_lead__socials
              li.list_lead_socials__item
                a(href=`https://twitter.com/${lead.socials[0]}`)
                  img(src="img/twitter.svg")
              li.list_lead_socials__item
                a(href=`https://facebook.com/${lead.socials[1]}`)
                  img(src="img/fb.svg")
              li.list_lead_socials__item
                a(href=`https://instagram.com/${lead.socials[2]}`)
                  img(src="img/instagram.svg")
  include reviews
  //- Feedback
  .feedback
    a(href="#") 
      span feedback


            
